{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "module": "ESNext"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}